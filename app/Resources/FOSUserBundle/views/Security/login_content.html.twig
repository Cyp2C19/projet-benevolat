{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <br><br>
    <div class="valign-wrapper row login-box">
        <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="card-content">
                    <span class="card-title">SE CONNECTER</span></br>
                    <div class="row">
                        <div class="col s12">
                            <label for="username">Adresse Email</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                        </div>
                        <div class="col s12">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" name="_password" required="required" />
                        </div>
                    </div>
                    {% if error %}
                        <div class="row">
                            <span class="red-text center-align">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    {% endif %}
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
                </div>
                <div class="card-action right-align">
                    <input type="reset" id="reset" class="btn-flat grey-text waves-effect" value="Effacer">
                    <input type="submit" id="_submit" class="btn waves-effect blue darken-2" name="_submit"
                           value="Connexion" />
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}